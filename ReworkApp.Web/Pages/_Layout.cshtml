<!DOCTYPE html>

<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>REWORK - @ViewData["Title"]</title>
<link rel="stylesheet" href="~/css/site.css" />
<link href="https://www.google.com/search?q=https://fonts.googleapis.com/css2%3Ffamily%3DInter:wght%40400%3B600%3B700%26display%3Dswap" rel="stylesheet">
</head>
<body>
<header>
<h1>REWORK</h1>
<nav>
<a asp-page="/Index" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")">Home</a>
<a asp-page="/Jobs" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Jobs" ? "active" : "")">Jobs</a>
<a asp-page="/Courses" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Courses" ? "active" : "")">Courses</a>
</nav>
</header>

<main class="container">
    @RenderBody()
</main>

<footer>
    &copy; 2023 REWORK. All rights reserved.
</footer>

</body>
</html>